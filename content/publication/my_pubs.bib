	pmcid = {PMC10825961},
	keywords = {Humans, HIV Infections, Female, Malawi, Prevalence, Bayes Theorem, HIV, Pregnancy, Syphilis, eMTCT, Infectious Disease Transmission, Vertical, maternal syphilis, Pregnancy Complications, Infectious, spatio-temporal model, syphilis prevalence},
	pages = {1242870},
