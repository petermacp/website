@article{grahamFractureHealingPatients2021,
  title = {Fracture Healing in Patients with Human Immunodeficiency Virus in South Africa: A Prospective Cohort Study},
  shorttitle = {Fracture Healing in Patients with Human Immunodeficiency Virus in South Africa},
  author = {Graham, Simon Matthew and Maqungo, Sithombo and Laubscher, Maritz and Ferreira, Nando and Held, Michael and Harrison, William James and Simpson, A. Hamish and MacPherson, Peter and Lalloo, David G.},
