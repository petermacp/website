@article{divalaMissedOpportunitiesDiagnosis2022,
  title = {Missed Opportunities for Diagnosis and Treatment in Patients with TB Symptoms: A Systematic Review},
  author = {Divala, T. H. and Lewis, J. and Bulterys, M. A. and Lutje, V. and Corbett, E. L. and Schumacher, S. G. and MacPherson, P.},
  year = {2022},
  journal = {Public Health Action},
