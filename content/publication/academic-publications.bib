@article{johnsonUseAwarenessWillingness2020,
  title = {Use and Awareness of and Willingness to Self-Test for HIV: An Analysis of Cross-Sectional Population-Based Surveys in Malawi and Zimbabwe},
  shorttitle = {Use and Awareness of and Willingness to Self-Test for HIV},
  author = {Johnson, Cheryl and Neuman, Melissa and MacPherson, Peter and Choko, Augustine and Quinn, Caitlin and Wong, Vincent J. and Hatzold, Karin and Nyrienda, Rose and Ncube, Getrude and Baggaley, Rachel and {Terris-Prestholt}, Fern and Corbett, Elizabeth L.},
  year = {2020},
