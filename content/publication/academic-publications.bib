  title = {Tuberculosis Patients at the Human-Animal Interface: Potential Zooanthroponotic and Zoonotic Transmission},
  shorttitle = {Tuberculosis Patients at the Human-Animal Interface},
  author = {Moyo, Maureen and Lebina, Limakatso and Milovanovic, Minja and MacPherson, Peter and Michel, Anita and Martinson, Neil},
  year = {2021},
