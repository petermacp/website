@article{thindwaSocialMixingPatterns2021,
  title = {Social Mixing Patterns Relevant to Infectious Diseases Spread by Close Contact in Urban Blantyre, Malawi},
  author = {Thindwa, Deus and Jambo, Kondwani C. and Ojal, John and MacPherson, Peter and Phiri, Mphatso Dennis and Khundi, McEwen and Chiume, Lingstone and Gallagher, Katherine E. and Heyderman, Robert S. and Corbett, Elizabeth L. and French, Neil and Flasche, Stefan},
