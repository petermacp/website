@article{zamanDrugResistanceMycobacterium2005,
  title = {Drug Resistance of Mycobacterium Tuberculosis in Selected Urban and Rural Areas in Bangladesh},
  author = {Zaman, K. and Rahim, Z. and Yunus, M. and Arifeen, S. and Baqui, A. and Sack, D. and Hossain, S. and Banu, S. and Islam, M. A. and Ahmed, J. and Breiman, R. and Black, R.},
