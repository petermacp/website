@article{sumnerEstimatingImpactTuberculosis2019,
  title = {Estimating the Impact of Tuberculosis Case Detection in Constrained Health Systems: An Example of Case-Finding in South Africa},
  shorttitle = {Estimating the Impact of Tuberculosis Case Detection in Constrained Health Systems},
