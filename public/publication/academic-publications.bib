@article{xiaAccuracySelfreportedHIV2020,
  title = {Accuracy of Self-Reported HIV Testing History and Awareness of HIV-Positive Status among People Living with HIV in Four Sub-Saharan African Countries},
  author = {Xia, Yiqing and Milwid, Rachael M. and Godin, Arnaud and Boily, Marie-Claude and Johnson, Leigh F. and Marsh, Kimberly and Eaton, Jeffrey W. and {Maheu-Giroux}, Mathieu},
