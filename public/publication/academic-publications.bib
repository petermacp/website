}

@article{rangakaControllingSeedbedsTuberculosis2015,
  title = {Controlling the Seedbeds of Tuberculosis: Diagnosis and Treatment of Tuberculosis Infection},
  shorttitle = {Controlling the Seedbeds of Tuberculosis},
  author = {Rangaka, Molebogeng X. and Cavalcante, Solange C. and Marais, Ben J. and Thim, Sok and Martinson, Neil A. and Swaminathan, Soumya and Chaisson, Richard E.},
