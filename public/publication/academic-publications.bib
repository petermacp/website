@article{chaissonSystematicReviewNumber2021,
  title = {A Systematic Review of the Number Needed to Screen for Active TB among People Living with HIV},
  author = {Chaisson, L. H. and Naufal, F. and {Delgado-Barroso}, P. and {Alvarez-Manzo}, H. S. and Robsky, K. O. and Miller, C. R. and Golub, J. E. and Shapiro, A. E.},
