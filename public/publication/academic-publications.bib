@article{hongSixthNationwideTuberculosis1993,
  title = {The Sixth Nationwide Tuberculosis Prevalence Survey in Korea, 1990},
  author = {Hong, Y. P. and Kim, S. J. and Kwon, D. W. and Chang, S. C. and Lew, W. J. and Han, Y. C.},
