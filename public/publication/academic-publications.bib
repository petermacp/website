@article{tymejczykChangesRapidHIV2019,
  title = {Changes in Rapid HIV Treatment Initiation after National “Treat All” Policy Adoption in 6 Sub-Saharan African Countries: Regression Discontinuity Analysis},
  shorttitle = {Changes in Rapid HIV Treatment Initiation after National “Treat All” Policy Adoption in 6 Sub-Saharan African Countries},
