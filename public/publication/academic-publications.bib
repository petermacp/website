@article{cohenPoorOutcomesRecurrent2019,
  title = {Poor Outcomes in Recurrent Tuberculosis: More than Just Drug Resistance?},
  shorttitle = {Poor Outcomes in Recurrent Tuberculosis},
  author = {Cohen, Danielle B. and Davies, Geriant and Malwafu, Wakisa and Mangochi, Helen and Joekes, Elizabeth and Greenwood, Simon and Corbett, Liz and Squire, S. Bertel},
  year = {2019},
