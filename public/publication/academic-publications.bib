@article{dowdyHeterogeneityTuberculosisTransmission2012,
  title = {Heterogeneity in Tuberculosis Transmission and the Role of Geographic Hotspots in Propagating Epidemics},
  author = {Dowdy, David W. and Golub, Jonathan E. and Chaisson, Richard E. and Saraceni, Valeria},
