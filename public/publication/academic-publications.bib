  pmid = {30824911},
  keywords = {health resources,mathematical models,South Africa,tuberculosis},
  file = {/Users/petermacpherson/Zotero/storage/32ULZL8A/Sumner et al. - 2019 - Estimating the Impact of Tuberculosis Case Detecti.pdf}
