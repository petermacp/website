@article{schadeEpidemiologyFracturesTheir2021,
  title = {Epidemiology of Fractures and Their Treatment in Malawi: Results of a Multicentre Prospective Registry Study to Guide Orthopaedic Care Planning},
  shorttitle = {Epidemiology of Fractures and Their Treatment in Malawi},
  author = {Schade, Alexander Thomas and Mbowuwa, Foster and Chidothi, Paul and MacPherson, Peter and Graham, Simon Matthew and Martin, Claude and Harrison, William James and Chokotho, Linda},
  year = {2021},
