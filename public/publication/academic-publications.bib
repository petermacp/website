@article{martinezTransmissionMycobacteriumTuberculosis2017,
  title = {Transmission of Mycobacterium Tuberculosis in Households and the Community: A Systematic Review and Meta-Analysis},
  shorttitle = {Transmission of Mycobacterium Tuberculosis in Households and the Community},
  author = {Martinez, Leonardo and Shen, Ye and Mupere, Ezekiel and Kizza, Allan and Hill, Philip C. and Whalen, Christopher C.},
