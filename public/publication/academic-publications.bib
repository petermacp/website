}

@article{oxladeEffectivenessCosteffectivenessHealth2021,
  title = {Effectiveness and Cost-Effectiveness of a Health Systems Intervention for Latent Tuberculosis Infection Management (ACT4): A Cluster-Randomised Trial},
  shorttitle = {Effectiveness and Cost-Effectiveness of a Health Systems Intervention for Latent Tuberculosis Infection Management (ACT4)},
  author = {Oxlade, Olivia and Benedetti, Andrea and Adjobimey, Mênonli and Alsdurf, Hannah and Anagonou, Severin and Cook, Victoria J. and Fisher, Dina and Fox, Greg J. and Fregonese, Federica and Hadisoemarto, Panji and Hill, Philip C. and Johnston, James and Khan, Faiz Ahmad and Long, Richard and Nguyen, Nhung V. and Nguyen, Thu Anh and Obeng, Joseph and Ruslami, Rovina and Schwartzman, Kevin and Trajman, Anete and Valiquette, Chantal and Menzies, Dick},
