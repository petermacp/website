  author = {{van't Hoog}, A. H. and Laserson, K. F. and Githui, W. A. and Meme, H. K. and Agaya, J. A. and Odeny, L. O. and Muchiri, B. G. and Marston, B. J. and DeCock, K. M. and Borgdorff, M. W.},
