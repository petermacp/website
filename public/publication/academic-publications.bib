  author = {Lee, Kuan Ken and Bing, Rong and Kiang, Joanne and Bashir, Sophia and Spath, Nicholas and Stelzle, Dominik and Mortimer, Kevin and Bularga, Anda and Doudesis, Dimitrios and Joshi, Shruti S. and Strachan, Fiona and Gumy, Sophie and {Adair-Rohani}, Heather and Attia, Engi F. and Chung, Michael H. and Miller, Mark R. and Newby, David E. and Mills, Nicholas L. and McAllister, David A. and Shah, Anoop S. V.},
  year = {2020},
