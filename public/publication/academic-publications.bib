@article{schaeferWidespreadChangesSexual2019,
  title = {Widespread Changes in Sexual Behaviour in Eastern and Southern Africa: Challenges to Achieving Global HIV Targets? Longitudinal Analyses of Nationally Representative Surveys},
  shorttitle = {Widespread Changes in Sexual Behaviour in Eastern and Southern Africa},
  author = {Schaefer, Robin and Gregson, Simon and Benedikt, Clemens},
  year = {2019},
