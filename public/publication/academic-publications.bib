  author = {MacPherson, Peter and Chawla, Anu and Jones, Kathy and Coffey, Emer and Spaine, Vida and Harrison, Ian and Jelliman, Pauline and {Phillips-Howard}, Penelope and Beynon, Caryl and Taegtmeyer, Miriam},
