@article{pooranPointCareXpert2019,
  title = {Point of Care Xpert MTB/RIF versus Smear Microscopy for Tuberculosis Diagnosis in Southern African Primary Care Clinics: A Multicentre Economic Evaluation},
  shorttitle = {Point of Care Xpert MTB/RIF versus Smear Microscopy for Tuberculosis Diagnosis in Southern African Primary Care Clinics},
  author = {Pooran, Anil and Theron, Grant and Zijenah, Lynn and Chanda, Duncan and Clowes, Petra and Mwenge, Lawrence and Mutenherwa, Farirai and Lecesse, Paul and Metcalfe, John and Sohn, Hojoon and Hoelscher, Michael and Pym, Alex and Peter, Jonny and Dowdy, David and Dheda, Keertan},
  year = {2019},
