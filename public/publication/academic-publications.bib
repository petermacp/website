  pmcid = {PMC5610275},
  pmid = {28955412},
  keywords = {Adult,Female,Humans,Malawi,Male,Middle Aged,Orthopedics,Pain Measurement,Psychometrics,Quality of Life,Reproducibility of Results,Surveys and Questionnaires,Wounds and Injuries},
