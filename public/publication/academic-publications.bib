@article{qinUsingArtificialIntelligence2019,
  title = {Using Artificial Intelligence to Read Chest Radiographs for Tuberculosis Detection: A Multi-Site Evaluation of the Diagnostic Accuracy of Three Deep Learning Systems},
  shorttitle = {Using Artificial Intelligence to Read Chest Radiographs for Tuberculosis Detection},
  author = {Qin, Zhi Zhen and Sander, Melissa S. and Rai, Bishwa and Titahong, Collins N. and Sudrungrot, Santat and Laah, Sylvain N. and Adhikari, Lal Mani and Carter, E. Jane and Puri, Lekha and Codlin, Andrew J. and Creswell, Jacob},
