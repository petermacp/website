  keywords = {Adolescent,Adult,Aged,Bangladesh/epidemiology,Body Mass Index,Child,Child; Preschool,Cross-Sectional Studies,Female,Genotype,Humans,Infant,Infant; Newborn,Male,Middle Aged,Mycobacterium tuberculosis/genetics,Poverty Areas,Prevalence,Rural Population,Tuberculosis/ epidemiology/genetics,Young Adult}
