@article{woodChangingPrevalenceTuberculosis2010,
  title = {Changing Prevalence of Tuberculosis Infection with Increasing Age in High-Burden Townships in South Africa},
  author = {Wood, R. and Liang, H. and Wu, H. and Middelkoop, K. and Oni, T. and Rangaka, M. X. and Wilkinson, R. J. and Bekker, L. G. and Lawn, S. D.},
