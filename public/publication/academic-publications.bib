@article{storySmartphoneenabledVideoobservedDirectly2019,
  title = {Smartphone-Enabled Video-Observed versus Directly Observed Treatment for Tuberculosis: A Multicentre, Analyst-Blinded, Randomised, Controlled Superiority Trial},
  shorttitle = {Smartphone-Enabled Video-Observed versus Directly Observed Treatment for Tuberculosis},
  author = {Story, Alistair and Aldridge, Robert W. and Smith, Catherine M. and Garber, Elizabeth and Hall, Joe and Ferenando, Gloria and Possas, Lucia and Hemming, Sara and Wurie, Fatima and Luchenski, Serena and Abubakar, Ibrahim and McHugh, Timothy D. and White, Peter J. and Watson, John M. and Lipman, Marc and Garfein, Richard and Hayward, Andrew C.},
  year = {2019},
  month = mar,
  journal = {The Lancet},
  volume = {393},
  number = {10177},
