@article{smiejaIsoniazidPreventingTuberculosis2000,
  title = {Isoniazid for Preventing Tuberculosis in Non-HIV Infected Persons},
  author = {Smieja, M. J. and Marchetti, C. A. and Cook, D. J. and Smaill, F. M.},
