@article{mateo-urdialesRapidInitiationAntiretroviral2019,
  ids = {mateo-urdialesRapidInitiationAntiretroviral2019a},
  title = {Rapid Initiation of Antiretroviral Therapy for People Living with HIV},
  author = {{Mateo-Urdiales}, Alberto and Johnson, Samuel and Smith, Rhodine and Nachega, Jean B. and {Eshun-Wilson}, Ingrid},
  year = {2019},
  month = jun,
  journal = {The Cochrane Database of Systematic Reviews},
  volume = {6},
