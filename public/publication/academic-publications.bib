@article{bhatPrevalencePulmonaryTuberculosis2009,
  title = {Prevalence of Pulmonary Tuberculosis amongst the Tribal Population of Madhya Pradesh, Central India},
  author = {Bhat, J. and Rao, V. G. and Gopi, P. G. and Yadav, R. and Selvakumar, N. and Tiwari, B. and Gadge, V. and Bhondeley, M. K. and Wares, F.},
