@article{mortonEstablishmentHighdependencyUnit2020,
  title = {Establishment of a High-Dependency Unit in Malawi},
  author = {Morton, Ben and Banda, Ndaziona Peter and Nsomba, Edna and Ngoliwa, Clara and Antoine, Sandra and Gondwe, Joel and Limbani, Felix and Henrion, Marc Yves Romain and Chirombo, James and Baker, Tim and Kamalo, Patrick and Phiri, Chimota and Masamba, Leo and Phiri, Tamara and Mallewa, Jane and Mwandumba, Henry Charles and Mndolo, Kwazizira Samson and Gordon, Stephen and Rylance, Jamie},
  year = {2020},
